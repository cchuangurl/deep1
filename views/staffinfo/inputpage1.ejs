        </button>
        <div class="collapse navbar-collapse" id="navbarText">
          <ul class="navbar-nav mr-auto">
            <li class="nav-item">
                <a class="nav-link" href="/deep1/innerweb/affaire/personnel">{{lastpage}}</a>
              </li>
            <li class="nav-item active">
              <a class="nav-link" href="#">{{input1}}<span class="sr-only">(current)</span></a>
            </li>
            <li class="nav-item">
              <a class="nav-link" href="#">{{inputbatch}}</a>
            </li>
            <li class="nav-item">
              <a class="nav-link" href="#">{{crawl}}</a>
            </li>
          </ul>
          <span class="navbar-text">
            <font size="1">{{statusreport}}</font>
          </span>
        </div>
      </nav>
    </template>
    
    <template id="inputerUI" ">
      <div class="card" style="width: 36rem;" >
        <div class="card-body">
          <h5 class="card-title">{{card_title}}</h5>
          <h6 class="card-subtitle mb-2 text-muted">{{card_subtitle}}</h6>
          <form action="/deep1/staffinfo/add" method="post">
            <div class="form-group" :key="inputerUIkey">              
            
              <label for="formGroupExampleInput2">{{items.item0}}</label>
              <input type="text" name="a05lastname" class="form-control" id="formGroupExampleInput0" :placeholder="holders.holder0">

              <label for="formGroupExampleInput2">{{items.item1}}</label>
              <input type="text" name="a10fistname" class="form-control" id="formGroupExampleInput1" :placeholder="holders.holder1">

              <label for="formGroupExampleInput2">{{items.item2}}</label>
              <input type="text" name="a13identity" class="form-control" id="formGroupExampleInput2" :placeholder="holders.holder2">           
              
              <label for="formGroupExampleInput2">{{items.item3}}</label>
            <select name="a15gender" class="form-select" :placeholder="holders.holder3">
                <optgroup v-for="gender of genders" :key="gender._id">
                <option :value="gender.a25code">{{gender.a30mean}}</option>
                </optgroup>
                </select>
              <br>
              
              <label for="formGroupExampleInput2">{{items.item4}}</label>
              <input type="text" name="a20birthday" class="form-control" id="formGroupExampleInput4" :placeholder="holders.holder4">
            
              <label for="formGroupExampleInput2">{{items.item5}}</label>
              <input type="text" name="a25dateofjoin" class="form-control" id="formGroupExampleInput5" :placeholder="holders.holder5">

              <label for="formGroupExampleInput2">{{items.item6}}</label>
            <select name="a28department" class="form-select" :placeholder="holders.holder6">
                <optgroup v-for="department of departments" :key="department._id">
                <option :value="department.a25code">{{department.a30mean}}</option>
                </optgroup>
                </select>
              <br>

              <label for="formGroupExampleInput2">{{items.item7}}</label>
            <select name="a30position" class="form-select" :placeholder="holders.holder7">
                <optgroup v-for="position of positions" :key="position._id">
                <option :value="position.a25code">{{position.a30mean}}</option>
                </optgroup>
                </select>
              <br>

              <label for="formGroupExampleInput2">{{items.item8}}</label>
              <input type="text" name="a33tel" class="form-control" id="formGroupExampleInput8" :placeholder="holders.holder8">

              <label for="formGroupExampleInput2">{{items.item9}}</label>
              <input type="text" name="a35phoneno" class="form-control" id="formGroupExampleInput9" :placeholder="holders.holder9">
            
              <label for="formGroupExampleInput2">{{items.item10}}</label>
              <input type="text" name="a40email" class="form-control" id="formGroupExampleInput10" :placeholder="holders.holder10">
            
              <label for="formGroupExampleInput2">{{items.item11}}</label>
              <input type="text" name="a45address" class="form-control" id="formGroupExampleInput11" :placeholder="holders.holder11">
            
              <label for="formGroupExampleInput2">{{items.item12}}</label>
              <input type="text" name="a50degree" class="form-control" id="formGroupExampleInput12" :placeholder="holders.holder12">
            
              <label for="formGroupExampleInput2">{{items.item13}}</label>
              <input type="text" name="a55resume" class="form-control" id="formGroupExampleInput13" :placeholder="holders.holder13">
            
              <label for="formGroupExampleInput2">{{items.item14}}</label>
          <select name="a60expertise" class="form-select" :placeholder="holders.holder14" multiple>
                <optgroup v-for="expertise of expertises" :key="expertise._id">
                <option :value="expertise.a25code">{{expertise.a30mean}}</option>
                </optgroup>
                </select>
              <br>
                
              <label for="formGroupExampleInput2">{{items.item15}}</label>
              <input type="text" name="a65extra" class="form-control" id="formGroupExampleInput15" :placeholder="holders.holder15">
            
              <label for="formGroupExampleInput">{{items.item99}}</label>
              <input type="text" name="a99footnote" class="form-control" id="formGroupExampleInput99" :placeholder="holders.holder99">
            
              <input type="hidden" name="statusreport" class="form-control" id="msg1" value="由單筆staffinfo輸入後進入本頁">
              <input type="hidden" name="status" class="form-control" id="msg2" value="0">
              <input type="submit" id="button1" value="確定送出" class="btn btn-info">
            </div>
          </form>
          <input type="submit" id="button2" value="重新輸入" class="btn btn-info" @click="rerender()">
            <!-- <a href="#" class="card-link">Card link</a>
            <a href="#" class="card-link">Another link</a> -->
        </div>
      </div> 
    </template>

<!-- Vue CDN-->
<script src="https://unpkg.com/vue@2.6.14/dist/vue.js"></script>
<script>
Vue.component("bander",{
    
    data(){
      return {
        brand:"Deep內部功能",
        lastpage:"回人資管理頁",
        input1:"手動新增1筆",
        inputbatch:"批次輸入",
        crawl:"從網路抓取",
        statusreport:'<%- statusreport %>'
      }
    },
    
    template:"#banderUI"
  });
  Vue.component("inputer",{
    
    data(){
      return {
        card_title:"新增1個員工資料",
        card_subtitle:"請輸入以下各項資料:",
        items:{
            item0:"姓:",
            item1:"名:",
            item2:"身分證號碼:",
            item3:"性別:",
            item4:"出生年月日:",
            item5:"加入事業時間:",
            item6:"現職單位:",
            item7:"現職職稱:",
            item8:"電話:",
            item9:"手機:",
            item10:"Email:",
            item11:"地址:",
            item12:"主要學歷:",
            item13:"主要經歷:",
            item14:"主要專長:",
            item15:"其他:",
            item99:"特別註記:"
      },
        holders:{
            holder0:"字串,",
            holder1:"字串,",
            holder2:"字串,",
            holder3:"字串,如名詞字典選項",
            holder4:"日期時間,",
            holder5:"日期時間,需在2022/2/10後",
            holder6:"字串,如名詞字典選項",
            holder7:"字串,如名詞字典選項",
            holder8:"字串,",
            holder9:"字串,10位數字",
            holder10:"字串,需有@",
            holder11:"字串,",
            holder12:"陣列,",
            holder13:"陣列,",
            holder14:"陣列,如名詞字典選項",
            holder15:"字串,",
            holder99:"字串"
        },
        termlist:JSON.parse(decodeURIComponent('<%=termlist%>')),
        genders:[],
        departments:[],
        positions:[],
        expertises:[],
      inputerUIkey:0
        
      } 
    },
    mounted:function(){
        for(term of this.termlist){
            if(term.a20field=="a15gender"){
                this.genders.push(term)
            }
        }
        for(term of this.termlist){
            if(term.a20field=="a28department"){
                this.departments.push(term)
            }
        }
        for(term of this.termlist){
            if(term.a20field=="a30position"){
                this.positions.push(term)
            }
        }
        for(term of this.termlist){
            if(term.a20field=="a60expertise"){
                this.expertises.push(term)
            }
        }                   
    },    
    methods:{
        rerender:function() {
      this.inputerUIkey += 1;
      console.log("inputerUIkey:"+this.inputerUIkey)  
    }
    }, 
    
    template:"#inputerUI"
  });
  
