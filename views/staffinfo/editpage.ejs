              <input type="text" name="a35phoneno" class="form-control" id="formGroupExampleInput6" :value="staffinfo.a35phoneno">
            
              <label for="formGroupExampleInput2">{{items.item7}}</label>
              <input type="text" name="a40email" class="form-control" id="formGroupExampleInput7" :value="staffinfo.a40email">
            
              <label for="formGroupExampleInput2">{{items.item8}}</label>
              <input type="text" name="a45address" class="form-control" id="formGroupExampleInput8" :value="staffinfo.a45address">
           
              <label for="formGroupExampleInput2">{{items.item9}}</label>
              <input type="text" name="a50degree" class="form-control" id="formGroupExampleInput9" :value="staffinfo.a50degree">
           
              <label for="formGroupExampleInput2">{{items.item10}}</label>
              <input type="text" name="a55resume" class="form-control" id="formGroupExampleInput10" :value="staffinfo.a55resume">
           
              <label for="formGroupExampleInput2">{{items.item11}}</label>
              <input type="text" name="a60expertise" class="form-control" id="formGroupExampleInput11" :value="staffinfo.a60expertise">
           
              <label for="formGroupExampleInput2">{{items.item12}}</label>
              <input type="text" name="a65extra" class="form-control" id="formGroupExampleInput12" :value="staffinfo.a65extra">
           
              <input type="hidden" name="statusreport" class="form-control" id="msg1" value="由修正staffinfo後進入本頁">
            
              <input type="submit" id="button1" value="確定送出" class="btn btn-info">
            </div>
