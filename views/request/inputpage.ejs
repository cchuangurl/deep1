  <title>單筆request資料</title>
  </head>
  <body>
    <div id="show_div">
      <bander></bander>
        <inputer></inputer>        
    </div>
 
    <template id="banderUI">
      <nav class="navbar navbar-expand-lg navbar-light">
        <a class="navbar-brand" href="#">{{brand}}</a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarText" aria-controls="navbarText" aria-expanded="false" aria-label="Toggle navigation">
          <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarText">
          <ul class="navbar-nav mr-auto">
            <li class="nav-item">
                <a class="nav-link" href="/deep1/request">{{lastpage}}<span class="sr-only">(current)</span></a>
              </li>
            <li class="nav-item active">
              <a class="nav-link" href="#">{{input1}}<span class="sr-only">(current)</span></a>
            </li>
            <li class="nav-item">
              <a class="nav-link" href="#">{{inputbatch}}</a>
            </li>
            <li class="nav-item">
              <a class="nav-link" href="#">{{crawl}}</a>
            </li>
          </ul>
          <span class="navbar-text">
            <font size="1">{{statusreport}}</font>
          </span>
        </div>
      </nav>
    </template>
    
    <template id="inputerUI" ">
      <div class="card" style="width: 36rem;" >
        <div class="card-body">
          <h5 class="card-title">{{card_title}}</h5>
          <h6 class="card-subtitle mb-2 text-muted">{{card_subtitle}}</h6>
          <form action="/deep1/request/add" method="post">
            <div class="form-group" :key="inputerUIkey">              
            
              <label for="formGroupExampleInput2">{{items.item0}}</label>
              <input type="text" name="a05ipofclient" class="form-control" id="formGroupExampleInput0" :placeholder="holders.holder0">

              <label for="formGroupExampleInput2">{{items.item1}}</label>
              <input type="text" name="a10client" class="form-control" id="formGroupExampleInput1" :placeholder="holders.holder1">
           
              <label for="formGroupExampleInput2">{{items.item2}}</label>
              <input type="text" name="a15requestdate" class="form-control" id="formGroupExampleInput2" :placeholder="holders.holder2">
            
              <label for="formGroupExampleInput2">{{items.item3}}</label>
              <input type="text" name="a20phoneno" class="form-control" id="formGroupExampleInput3" :placeholder="holders.holder3">
            
              <label for="formGroupExampleInput2">{{items.item4}}</label>
              <input type="text" name="a23tel" class="form-control" id="formGroupExampleInput4" :placeholder="holders.holder4">
              
              <label for="formGroupExampleInput2">{{items.item5}}</label>
              <input type="text" name="a25email" class="form-control" id="formGroupExampleInput5" :placeholder="holders.holder5">
           
              <label for="formGroupExampleInput2">{{items.item6}}</label>
              <input type="text" name="a30address" class="form-control" id="formGroupExampleInput6" :placeholder="holders.holder6">
            
              <label for="formGroupExampleInput2">{{items.item7}}</label>
              <input type="text" name="a35request" class="form-control" id="formGroupExampleInput7" :placeholder="holders.holder7">
            
              <label for="formGroupExampleInput2">{{items.item8}}</label>
              <input type="text" name="a40deadline" class="form-control" id="formGroupExampleInput8" :placeholder="holders.holder8">
            
              <label for="formGroupExampleInput2">{{items.item9}}</label>              
              <select name="a45status" class="form-select" :placeholder="holders.holder9">
                <optgroup v-for="status of statuss" :key="status._id">
                <option :value="status.a25code">{{status.a30mean}}</option>
                </optgroup>
                </select>
              <br>

              <label for="formGroupExampleInput2">{{items.item10}}</label>
              <select name="a50contactor" class="form-select" :placeholder="holders.holder10">
                <optgroup v-for="staffinfo of staffinfolist" :key="staffinfo._id" >            
                <option :value="staffinfo._id">{{staffinfo.a28department}}{{staffinfo.a05lastname}}{{staffinfo.a10firstname}}</option>
                </optgroup>  
                </select>             
                <br>    
            
              <label for="formGroupExampleInput2">{{items.item11}}</label>
              <select name="a55howtodo" class="form-select" :placeholder="holders.holder9">
                <optgroup v-for="howtodo of howtodos" :key="howtodo._id">
                <option :value="howtodo.a25code">{{howtodo.a30mean}}</option>
                </optgroup>
                </select>
              <br>

              <label for="formGroupExampleInput2">{{items.item12}}</label>
              <input type="text" name="a60initial" class="form-control" id="formGroupExampleInput12" :placeholder="holders.holder12">
            
              <label for="formGroupExampleInput2">{{items.item13}}</label>
          <select name="a65followup" class="form-select" :placeholder="holders.holder13">
                <optgroup v-for="followup of followups" :key="followup._id">
                <option :value="followup.a25code">{{followup.a30mean}}</option>
                </optgroup>
                </select>
              <br>
               
              <label for="formGroupExampleInput2">{{items.item14}}</label>
              <input type="text" name="a70extra" class="form-control" id="formGroupExampleInput14" :placeholder="holders.holder14">
            
              <label for="formGroupExampleInput">{{items.item99}}</label>
              <input type="text" name="a99footnote" class="form-control" id="formGroupExampleInput99" :placeholder="holders.holder99">
            
              <input type="hidden" name="statusreport" class="form-control" id="msg1" value="由單筆request輸入後進入本頁">
            
              <input type="submit" id="button1" value="確定送出" class="btn btn-info">
            </div>
          </form>
          <input type="submit" id="button2" value="重新輸入" class="btn btn-info" @click="rerender()">
            <!-- <a href="#" class="card-link">Card link</a>
            <a href="#" class="card-link">Another link</a> -->
        </div>
      </div> 
    </template>

<!-- Vue CDN-->
<script src="https://unpkg.com/vue@2.6.14/dist/vue.js"></script>
<script>
Vue.component("bander",{
    
    data(){
      return {
        brand:"Deep內部功能",
        lastpage:"回前頁",
        input1:"手動新增1筆",
        inputbatch:"批次輸入",
        crawl:"從網路抓取",
        statusreport:'<%= JSON.stringify(statusreport) %>'
      }
    },
    
    template:"#banderUI"
  });
  Vue.component("inputer",{
    
    data(){
      return {
        card_title:"新增1個服務需求",
        card_subtitle:"請輸入以下各項資料:",
        items:{
            item0:"來客IP:",
            item1:"稱呼或已註冊帳號:",
            item2:"提出日期:",
            item3:"手機:",
            item4:"電話:",
            item5:"Email:",
            item6:"地址:",
            item7:"服務需求:",
            item8:"期望完成期限:",
            item9:"處理狀態:",
            item10:"服務窗口人員:",
            item11:"專業屬性:",
            item12:"初步解決構想:",
            item13:"處理後追踪:",
            item14:"其他:",
            item99:"特別註記:"
      },
        holders:{
            holder0:"字串,",
            holder1:"字串,",
            holder2:"日期時間,",
            holder3:"字串,10位數字",
            holder4:"字串,",
            holder5:"字串,需有@",
            holder6:"字串,",
            holder7:"字串,",
            holder8:"日期時間,",
            holder9:"字串,如名詞字典選項",
            holder10:"字串,由staffinfo選取",
            holder11:"字串,如名詞字典選項",
            holder12:"字串,",
            holder13:"字串,如名詞字典選項",
            holder14:"字串,",
            holder99:"字串"
        },
        termlist:JSON.parse(decodeURIComponent('<%=termlist%>')),
        staffinfolist:JSON.parse(decodeURIComponent('<%=staffinfolist%>')),
        statuss:[],
        howtodos:[],
        followups:[],
      inputerUIkey:0
        
      } 
    },
    mounted:function(){
        for(let term of this.termlist){
            if(term.a20field=="a45status"){
                this.statuss.push(term)
            }
        }
        for(let term of this.termlist){
            if(term.a20field=="a55howtodo"){
                this.howtodos.push(term)
            }
        } 
        for(let term of this.termlist){
            if(term.a20field=="a65followup"){
                this.followups.push(term)
            }
        }                         
    },     
    methods:{
        rerender:function() {
      this.inputerUIkey += 1;
      console.log("inputerUIkey:"+this.inputerUIkey)  
    }
    }, 
    
    template:"#inputerUI"
  });
  
