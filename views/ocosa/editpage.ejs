    template:"#banderUI"
  });
  Vue.component("inputer",{
    props:{},
    data(){
      return {
        card_title:"",
        card_subtitle:"請修正以下各項資料:",
        items:{
            item0:"來客IP",
            item1:"姓名",
            item2:"註冊日期",
            item3:"自訂帳號",
            item4:"自訂密碼",
